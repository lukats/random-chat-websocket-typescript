{
  "compilerOptions": {
    "pretty": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "ES5", "es6", "es2017", "ES2019", "esnext.asynciterable"],
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "composite": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": false,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts", "src/globals.d.ts", "src/globals.js"],
  "exclude": ["node_modules"]
}
